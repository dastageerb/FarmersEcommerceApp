<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/layoutHomeLatestProductsItemCategoryNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fruit"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="24dp"
        />
    <TextView
        android:id="@+id/layoutHomeLatestProductsItemSeeAllTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See All"
        android:background="@color/colorTransparent"
        android:textColor="@color/black"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="24dp"
        android:textSize="20sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/layoutHomeLatestProductsChildRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutHomeLatestProductsItemCategoryNameTextView"
        />

</RelativeLayout>