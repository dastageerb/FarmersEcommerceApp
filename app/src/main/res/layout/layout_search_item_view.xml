<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:layout_margin="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/layoutSearchItemsImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/image_place_holder" />

        <TextView
            android:id="@+id/layoutSearchItemsProductNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/layoutSearchItemsImageView"
            android:text="Product Name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/layoutSearchItemsProductCategoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="category"
            android:layout_toEndOf="@id/layoutSearchItemsImageView"
            android:layout_below="@id/layoutSearchItemsProductNameTextView"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            />


        <TextView
            android:id="@+id/txtRs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutSearchItemsProductCategoryTextView"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/layoutSearchItemsImageView"
            android:text="@string/rs"
            android:textColor="@color/colorRed"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/layoutSearchItemsProductPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutSearchItemsProductCategoryTextView"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/txtRs"
            android:text="120"
            android:textColor="@color/colorRed"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/layoutSearchItemsProductLocationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutSearchItemsProductPriceTextView"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/layoutSearchItemsImageView"
            android:text="Location"
            android:layout_marginBottom="4dp"
            android:textSize="18sp" />



    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>