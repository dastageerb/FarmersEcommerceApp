<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/layoutSearchItemsImageView"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:background="@color/colorPrimary"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/layoutSearchItemsProductNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@id/layoutSearchItemsImageView"
            android:text="Product Name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/layoutSearchItemsProductCategoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="category"
            android:layout_toEndOf="@id/layoutSearchItemsImageView"
            android:layout_below="@id/layoutSearchItemsProductNameTextView"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/layoutSearchItemsProductQuantityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_toEndOf="@id/layoutSearchItemsImageView"
            android:layout_below="@id/layoutSearchItemsProductCategoryTextView"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            />
        <TextView
            android:id="@+id/layoutSearchItemsProductQuantityUnitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kil0"
            android:layout_toEndOf="@id/layoutSearchItemsProductQuantityTextView"
            android:layout_below="@id/layoutSearchItemsProductCategoryTextView"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/layoutSearchItemsProductPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutSearchItemsProductQuantityUnitTextView"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/layoutSearchItemsImageView"
            android:text="120"
            android:textColor="@color/colorRed"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/layoutSearchItemsProductLocationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutSearchItemsProductPriceTextView"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/layoutSearchItemsImageView"
            android:text="Location"
            android:textSize="18sp" />



    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>