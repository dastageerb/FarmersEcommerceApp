<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageViewLayoutSearchItemProductImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorPrimary"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/textViewLayoutSearchItemProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageViewLayoutSearchItemProductImage"
            android:text="Product Name"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            />



        <RatingBar
            android:id="@+id/ratingBarLayoutSearchItem"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewLayoutSearchItemProductName"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/imageViewLayoutSearchItemProductImage"
            android:layout_marginTop="8dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageViewLayoutSearchItemProductImage"
            android:layout_below="@id/ratingBarLayoutSearchItem"
            android:text="@string/description"
            android:layout_marginStart="2dp"
            />


        <TextView
            android:id="@+id/textViewLayoutSearchItemProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Price"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            />



    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>